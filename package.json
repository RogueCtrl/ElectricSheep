{
  "name": "electricsheep",
  "version": "0.2.0",
  "description": "A reflection engine that synthesizes agent-operator interactions into dreams",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "electricsheep": "dist/bin/electricsheep.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/bin/electricsheep.js",
    "test": "node --import tsx --test 'test/**/*.test.ts'",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts' 'bin/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts' 'test/**/*.ts' 'bin/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts' 'bin/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts' 'bin/**/*.ts'",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:first": "standard-version --first-release"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "ai",
    "agent",
    "openclaw",
    "dreams",
    "memory",
    "reflection"
  ],
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.4.1",
    "commander": "^14.0.3",
    "dotenv": "^17.2.3",
    "p-retry": "^7.1.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^24.10.9",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "standard-version": "^9.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.54.0"
  },
  "peerDependencies": {
    "openclaw": ">=1.0.0"
  }
}
